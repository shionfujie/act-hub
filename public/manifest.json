{
  "name": "ActHub",
  "description": "A single hub for all actions",
  "version": "0.3.2",
  "manifest_version": 2,
  "icons": {
    "16": "./get_started16.png",
    "32": "./get_started32.png",
    "48": "./get_started48.png",
    "128": "./get_started128.png"
  },
  "permissions": ["management", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/static/js/content.js"],
      "css": ["/static/css/content.css"]
    }
  ],
  "background": {
    "scripts": ["/static/js/background.js"],
    "persistent": false
  }
}
